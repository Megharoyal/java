import java.util.*;
public class Fence
{
    public static void main(String args[])
    {
        int a,b;
        Scanner sc=new Scanner(System.in);
        a=sc.nextInt();//50
        b=sc.nextInt();//20
        System.out.println("Required length is " + 2*(a+b) + " m");//140 m
        System.out.printf("Required quantity of carpet is "  + a*b + " sqm");//1000 sqm
    }
}
