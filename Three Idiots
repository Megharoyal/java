import java.util.Scanner;
public class Three
{
    public static void main(String args[])
    {
        int x1,y1,x2,y2;
        Scanner sc=new Scanner(System.in);
        x1=sc.nextInt();
        y1=sc.nextInt();
        x2=sc.nextInt();
        y2=sc.nextInt();
        float c=((x1+x2)/2);
        float d=((y1+y2));
        System.out.printf("Binoy's house is located at (%.1f,%.1f)",c,d/2);
    }
}
